<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundColor</item>
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <item name="colorAccent">@color/strongblue</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="EdittextThema" parent="Widget.AppCompat.EditText"></style>
    <style name="PopupTheme" parent="Theme.AppCompat.DayNight.Dialog"></style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:editTextColor">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
    </style>
    <style name="RadiusRoundTextView">
        <item name="android:background">@drawable/round_shape</item>
    </style>


</resources>
