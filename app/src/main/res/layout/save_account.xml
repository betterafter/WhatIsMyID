<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1C1C1C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context=".Activity.Save_widAccountActivity">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/id"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/edittext_style"
            android:fontFamily="@font/exo_light"
            android:gravity="center"
            android:hint="Username"
            android:nextFocusDown="@+id/password"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_style"
            android:fontFamily="@font/exo_light"
            android:gravity="center"
            android:hint="Password"
            android:nextFocusDown="@+id/email"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/url"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginTop="172dp"
            android:fontFamily="@font/exo_light"
            android:hint="www.example.com"
            android:nextFocusDown="@+id/id"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tag"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/exo_light"
            android:hint="google"
            android:nextFocusDown="@id/url"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.277"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/email"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginTop="408dp"
            android:fontFamily="@font/exo_light"
            android:hint="www.example@gmail.com"
            android:nextFocusDown="@+id/text"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="사이트 이름"
            android:textColor="#5384FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="380dp"
            android:text="이메일"
            android:textColor="#5384FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/nanumbold"
            android:text="website name"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="e-mail"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="144dp"
            android:text="사이트 주소"
            android:textAlignment="center"
            android:textColor="#5384FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="website URL"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/textView5" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="504dp"
            android:fontFamily="@font/exo_light"
            android:hint="memo"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/namesearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:background="@android:color/transparent"
            android:onClick="onClickForPopUpActivate"
            app:layout_constraintStart_toEndOf="@+id/tag"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_search" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>